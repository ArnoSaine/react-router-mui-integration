{
  "compilerOptions": {
    "strict": true,

    // node type stripping settings
    // https://nodejs.org/api/typescript.html#type-stripping
    "target": "esnext",
    "module": "nodenext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,

    "jsx": "react-jsx",
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
